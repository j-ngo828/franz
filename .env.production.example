# Franz Production Environment Variables

# Deployment
VERSION=latest
REGISTRY=registry.example.com
STACK_NAME=franz

# Cluster Configuration
FRANZ_CLUSTER_ID=franz-cluster-prod

# Storage
FRANZ_DATA_DIR=/var/lib/franz/data
FRANZ_LOG_DIR=/var/log/franz

# Resource Limits
FRANZ_CPU_LIMIT=2
FRANZ_MEMORY_LIMIT=4G
FRANZ_CPU_RESERVATION=1
FRANZ_MEMORY_RESERVATION=2G

# Replication
FRANZ_REPLICAS=3
